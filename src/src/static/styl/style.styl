@import "nib"
@import "variables"
@import "bootstrap"

body
    border-bottom 10px solid #222

    font-family "Avenir Next", Verdana, "ヒラギノ角ゴ Pro W3", "Hiragino Kaku Gothic Pro", "游ゴシック", "Yu Gothic", "メイリオ", Meiryo, Osaka, sans-serif;
    font-size 16px
    line-height 1.7

.container
    width 960px !important

.navbar .navbar-brand
    color #fff

.navbar-nav > li
    font-size 14px

    & a
        color #fff !important

#content
    overflow hidden
    margin-top $navbar-height


.doc-nav
    width 210px
    padding-top 16px

    h1, h2
        margin 0
        padding 5px 15px
        font-weight normal
        font-size 14px

    & > .nav > li > a
        padding 5px 15px
        font-size  14px

    li
        cursor pointer

    .doc-nav_label
    .doc-nav-item_label
        font-size 14px
        padding 20px 15px 5px

.doc-container
    box-shadow 0 0 10px rgba(#000, .2)

.doc-body
    padding-bottom 50px

    p
        margin 20px 0 !important

    .label-list
        display inline-block
        margin-right .5em
        line-height 1.3
        font-weight normal

.doc-header
    font-size 30px

    &_api-link::before
        content "\e144"

        margin-left 16px

        font-family 'Glyphicons Halflings'
        font-size 18px
        vertical-align middle
        color rgba(#3782c4, .5)

    .class-name
        margin-left .8em
        color #777

    .class-name-alias
        color #bbb
